.project
  page()

  &__splash
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-repeat: no-repeat
    background-position: 100% 100%
    background-size: contain

    &__scroll
      position: absolute
      z-index: 100
      bottom: 30px
      left: 50%
      margin-left: -48px
      cursor: pointer

      &:before
        icon()
        content: '\e604'
        color: #f5f5f5
        font-size: 48px

      &:hover:before
        color: #3ad6b0

  &__objects
    width: 100%
    text-align: center

    &_beyond-splash
      position: absolute
      top: 100%
      left: 0

  &__object
    position: relative
    margin: auto
    box-sizing: border-box
    background-repeat: no-repeat

    &__overlay
      position: absolute

  &__stripe
    position: relative
    width: 100%
    background-color: #000

  &__link
    display: inline-block
    margin: 0 auto
    border: 5px solid #3ad6b0
    padding: 0 41px
    height: 82px
    line-height: 82px
    font-size: 36px
    font-family: Open Sans Condensed, Arial, Helvetica, sans-serif
    font-weight: 300

  & .headline
    position: fixed
    transform: translateZ(0)
    width: calc(100% - 240px - 62px - 38px)

    &__title
      heading()
